## Environment variables for onchainbot
# Copy this file to .env and fill in your credentials.

# Ingestion (Ethereum & Solana)
ALCHEMY_WS_URL=
HELIUS_WS_URL=
JITO_SHRED_URL=
ETH_WALLETS_FILE=wallets_eth.json
SOL_WALLETS_FILE=wallets_sol.json

# Execution (Ethereum)
ETH_RPC_URL=
OX_API=
FLASHBOTS_SIGNER_KEY=
# FLASHBOTS_RELAY_URL (default https://relay.flashbots.net)
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# Execution (Solana)
SOLANA_PRIVATE_KEY_JSON=
# or SOLANA_KEYPAIR_PATH (path to keypair JSON)
SOLANA_KEYPAIR_PATH=
JITO_BUNDLE_URL=
JITO_BEARER=

# Alerts & Risk
N8N_WEBHOOK_URL=
MIRROR_RATIO=0.02
TTL_SECONDS=86400
